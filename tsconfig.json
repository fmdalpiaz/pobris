{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@/domain/*": ["domain/*"],
            "@/application/*": ["application/*"],
            "@/infrastructure/*": ["infrastructure/*"],
            "@/presentation/*": ["presentation/*"],
            "@/shared/*": ["shared/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/shared/types"
        ]
    },
    "include": [
        "src/**/*",
        "src/shared/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "prisma",
        "init-db",
        "scripts"
    ]
}
